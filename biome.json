{
  "$schema": "https://biomejs.dev/schemas/1.4.1/schema.json",
  "files": {
    "include": ["src/**/*.ts", "src/**/*.js", "src/**/*.json"],
    "ignore": ["node_modules", "dist"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  }
}
